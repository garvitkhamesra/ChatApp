<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorEdgeEffect"
    tools:context="labrat.com.chatapp.SignUpChoice">

    <Button
        android:id="@+id/choice_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="148dp"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:background="#ffe4b5"
        android:fontFamily="casual"
        android:padding="10dp"
        android:text="@string/new_user_sign_up"
        tools:layout_editor_absoluteX="113dp"
        tools:layout_editor_absoluteY="353dp" />

    <Button
        android:id="@+id/login_choice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffe4b5"
        android:fontFamily="casual"
        android:padding="15dp"
        android:text="Already have an Account"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/choice_signup"
        android:layout_marginTop="64dp"
        android:layout_alignEnd="@+id/choice_signup" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/choice_signup"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="23dp"
        android:fontFamily="casual"
        android:padding="15dp"
        android:text="Welcome To Chatter"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="24sp" />

</RelativeLayout>
