<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="labrat.com.chatapp.StatusActivity">

    <include
        android:id="@+id/status_navbar"
        layout="@layout/navbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/status_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/status_navbar"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Status "
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/statusUpdateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/status_update"
        android:layout_below="@+id/status_update"
        android:layout_marginTop="13dp"
        android:background="@color/colorAccent"
        android:fontFamily="casual"
        android:paddingEnd="15dp"
        android:paddingStart="15dp"
        android:text="Update Status" />
</RelativeLayout>
