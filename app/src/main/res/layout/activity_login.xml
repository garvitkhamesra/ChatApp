<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="labrat.com.chatapp.SignUp">

        <include layout="@layout/navbar" android:id="@+id/signup_navbar"/>

        <EditText
            android:id="@+id/login_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/login_msg"
            android:layout_marginStart="15dp"
            android:layout_marginTop="24dp"
            android:ems="10"
            android:fontFamily="casual"
            android:hint="E-Mail"
            android:inputType="textPersonName"
            android:padding="8dp"
            android:layout_marginEnd="15dp" />

    <EditText
        android:id="@+id/login_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/login_email"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:fontFamily="casual"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="8dp" />

    <Button
        android:id="@+id/login_button"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:elevation="0dp"
        android:fontFamily="casual"
        android:padding="15dp"
        android:paddingEnd="45dp"
        android:paddingStart="45dp"
        android:text="Login"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/login_password" />

    <TextView
        android:id="@+id/login_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/login_password"
        android:layout_below="@+id/signup_navbar"
        android:layout_marginTop="12dp"
        android:fontFamily="casual"
        android:padding="8dp"
        android:text="Already have a Account"
        android:textColor="?attr/editTextColor"
        android:textSize="24sp"
        android:textStyle="bold" />
    </RelativeLayout>

